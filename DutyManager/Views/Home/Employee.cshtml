@model EmployeeModel
@{
    ViewData["Title"] = "Сотрудники";
}

<div class="row">
    <div class="col-md-12">
        <div class="scroll-table">
            <table class="table border mt-2 mb-0">
                <thead class="table-info">
                    <tr>
                        <th>Полное имя</th>
                        <th>Логин</th>
                        <th width="20%">Телефон</th>
                        <th width="10%"></th>
                    </tr>
                </thead>
            </table>
            <div class="table border mt-0 scroll-table-body">
                <table class="table table-striped">
                    <tbody>
                        @foreach (var item in Model.Data)
                        {
                            <tr>
                                <td>@item.FullName</td>
                                <td>@item.LoginName</td>
                                <td width="20%">@item.Phone</td>
                                <td width="10%"><a asp-controller="Home" asp-action="EmployeeEdit" asp-route-EmployeeId="@item.EmployeeId"><i class="fa-solid fa-pencil"></i></a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script>
        $(document).ready(function () {
            $('#navbarEmployee').addClass('active');
        });

    </script>

}

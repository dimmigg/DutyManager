@using DutyManager.ViewModel
@model IndexModel
<div class="row mt-3 mb-2">
    <div class="border border-2 rounded-3 scroll-table">
        <table class="table mt-2 mb-0">
            <thead class="table-info">
                <tr>
                    <th >День недели</th>
                    <th >Начало</th>
                    <th >Окончание</th>
                    <th >Дежурный</th>
                    <th >Телефон</th>
                    <th >Логин</th>
                </tr>
            </thead>
        </table>
        <div class="table mt-0 scroll-table-body">
            <table class="table table-striped">
                <tbody>
                    @foreach (var item in Model.Data)
                    {
                        <tr>
                            <td>@item.DayOfWeekName</td>
                            <td>@item.DateStart.ToShortDateString() @item.DateStart.ToShortTimeString()</td>
                            <td>@item.DateFinish.ToShortDateString() @item.DateFinish.ToShortTimeString()</td>
                            <td>@item.FullName</td>
                            <td>@item.Phone</td>
                            <td>@item.LoginName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

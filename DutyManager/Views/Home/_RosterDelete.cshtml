@using DutyManager.Models
@model Roster

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group m-3">
        @Html.EditorFor(model => model.RosterId, new { @class = "visually-hidden" })
        <div class="row">
            <div class="col-md-10">
                <p>
                    Вы действительно хоте удалить дежурство?<br /><b>@Html.DisplayFor(model => model.DayOfWeekName)</b>:
                    @Html.DisplayFor(model => model.StartTime) - @Html.DisplayFor(model => model.DurationOfDuty) часов
                </p>
            </div>
            <div class="col-md-1 offset-md-1">
                <button type="button" data-bs-dismiss="modal" class="btn-close" aria-label="Закрыть"></button>
            </div>
        </div>

        <fieldset>
            <div class="form-group col-md-12 mb-0 pe-0 text-end">

                <input asp-controller="Home" asp-action="RosterDel" class="btn btn-danger" type="submit" value="Удалить" />
            </div>
        </fieldset>
    </div>
}
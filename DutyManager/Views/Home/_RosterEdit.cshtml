@using DutyManager.Models
@model Roster
@{
    Model.DaysOfWeek = new SelectList(DutyManager.Models.DayOfWeek.GetAllDaysOfWeek(), "DayOfWeekId", "DayOfWeekName");
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group m-3">
            @Html.EditorFor(model => model.RosterId, new { @class = "visually-hidden" })
            <div>
                <div class="row">
                    <div class="col-md-10">
                        @Html.LabelFor(model => model.DaysOfWeek, htmlAttributes: new { @class = "form-label control-label col-md-8 ms-2" })
                    </div>
                    <div class="col-md-1 offset-md-1">
                        <button type="button" data-bs-dismiss="modal" class="btn-close" aria-label="Закрыть"></button>
                    </div>
                </div>
                @Html.DropDownListFor(x => x.DayOfWeekId, Model.DaysOfWeek, new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.DaysOfWeek, "", new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(model => model.StartTime, htmlAttributes: new { @class = "form-label control-label col-md-8 ms-2 mt-2" })
                @Html.EditorFor(model => model.StartTime, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.StartTime, "", new { @class = "text-danger" })
            </div>

            <div>
                @Html.LabelFor(model => model.DurationOfDuty, htmlAttributes: new { @class = "form-label control-label col-md-8 ms-2 mt-2" })
                @Html.EditorFor(model => model.DurationOfDuty, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DurationOfDuty, "", new { @class = "text-danger" })
            </div>
        </div>


        <fieldset>
            <div class="form-group col-md-12 mb-3 pe-3 text-end">
                <input asp-controller="Home" asp-action="RosterEdit" class="btn btn-success" type="submit" value="ОК" />
            </div>
        </fieldset>
    </div>
}